# staging server
# {{ ansible_managed }}
#
server {
	listen			80;
	listen			[::]:80;
	server_name  		staging.{{ domain }};
	root			/var/staging/current/public;
	passenger_enabled	on;
	rails_env		staging;

	location / {
		passenger_enabled on;
		auth_basic "Staging";
		auth_basic_user_file htpasswd;
	}
}

